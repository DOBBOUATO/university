<odoo>
    <data>
        <record id="student_category" model="ir.module.category">
            <field name="name">Student Category</field>
        </record>
        <record id="instructor_category" model="ir.module.category">
            <field name="name">Instructor Category</field>
        </record>

        <record id="model_university_student_access" model="ir.model.access">
            <field name="name">Student Access</field>
            <field name="model_id" ref="model_university_student"/>
            <field name="group_id" ref="university.group_student_restriction"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="model_university_instructor_access" model="ir.model.access">
            <field name="name">Instructor Access</field>
            <field name="model_id" ref="model_university_student"/>
            <field name="group_id" ref="university.group_instructor_restriction"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>

        <record id="group_instructor_restriction" model="res.groups">
            <field name="name">Instructor</field>
            <field name="category_id" ref="university.instructor_category"/>
        </record>

        <record id="group_student_restriction" model="res.groups">
            <field name="name">Student</field>
            <field name="category_id" ref="university.student_category"/>
        </record>
    </data>
</odoo>