<odoo>
    <data>
        <record id="student_info_wizard_form" model="ir.ui.view">
            <field name="name">student.info.wizard.form</field>
            <field name="model">student.info.wizard</field>
            <field name="arch" type="xml">
                <form string="Student Information Wizard">
                    <group>
                        <field name="student_id"/>
                    </group>
                    <footer>
                        <button name="do_something" string="Do Something" type="object" class="btn-primary"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_open_student_info_wizard" model="ir.actions.act_window">
            <field name="name">Open Student Info Wizard</field>
            <field name="res_model">student.info.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>